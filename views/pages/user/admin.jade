				.form-group
					label.col-sm-2.control-label(for="inputTitle") 电影名称
					.col-sm-10
						input#inputTitle.form-control(type="text", name="movie[title]")
				.form-group
					label.col-sm-2.control-label(for="inputTitle") 导演
					.col-sm-10
						input#inputTitle.form-control(type="text", name="movie[title]")
				.form-group
					label.col-sm-2.control-label(for="inputTitle") 国家
					.col-sm-10
						input#inputTitle.form-control(type="text", name="movie[title]")
				.form-group
					label.col-sm-2.control-label(for="inputTitle") 语种
					.col-sm-10
						input#inputTitle.form-control(type="text", name="movie[title]")
				.form-group
					label.col-sm-2.control-label(for="inputTitle") 海报地址
					.col-sm-10
						input#inputTitle.form-control(type="text", name="movie[title]")
				.form-group
					label.col-sm-2.control-label(for="inputTitle") 片源地址
					.col-sm-10
						input#inputTitle.form-control(type="text", name="movie[title]")
				.form-group
					label.col-sm-2.control-label(for="inputYear") 上映年代
					.col-sm-10
						input#inputTitle.form-control(type="text", name="movie[title]")
				.form-group
					label.col-sm-2.control-label(for="inputSummary") 电影简介
					.col-sm-10
						input#inputTitle.form-control(type="text", name="movie[title]")
